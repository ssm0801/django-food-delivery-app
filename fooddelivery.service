[Unit]
Description=Food Delivery Django App
After=network.target redis.service

[Service]
Type=simple
User=ec2-user
Group=ec2-user
WorkingDirectory=/opt/fooddelivery
Environment=DJANGO_SETTINGS_MODULE=fooddelivery.settings
ExecStart=/opt/fooddelivery/venv/bin/daphne -b 0.0.0.0 -p 8000 fooddelivery.asgi:application
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target